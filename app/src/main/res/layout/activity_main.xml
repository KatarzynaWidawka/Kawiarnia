<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.widaw.kawiarnia.MainActivity">

    <TextView
        android:id="@+id/witaj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Witaj w restauracji XYZ"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="20dp"
        android:textColor="#4e342e"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/wyswietlany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#4e342e"
        android:layout_marginTop="80dp"
        android:text="Aby złożyć zamówienie wpisz numer stolika oraz wybierz pozycję z listy"
        android:gravity="center"/>
    <EditText
        android:id="@+id/podajstolik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Podaj numer stolika"
        android:gravity="center"/>

    <Button
        android:background="#4e342e"
        android:textColor="#FFFFFF"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="WYBIERZ DANE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/wybierzdane"/>
</LinearLayout>
